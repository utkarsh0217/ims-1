<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>email_validation_rule_1</fullName>
    <active>true</active>
    <errorConditionFormula>NOT (REGEX( email__c ,&quot;[a-zA-Z0-9\\.\\-]+[@][a-z]+\\.[a-z]+&quot;))</errorConditionFormula>
    <errorDisplayField>email__c</errorDisplayField>
    <errorMessage>enter proper email format</errorMessage>
</ValidationRule>
