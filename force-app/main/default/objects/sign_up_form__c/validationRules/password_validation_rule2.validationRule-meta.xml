<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>password_validation_rule2</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX(  password__c  , &quot;((?=.*\\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[@#$%]).{6,20})&quot;))</errorConditionFormula>
    <errorDisplayField>password__c</errorDisplayField>
    <errorMessage>atleast one lowercase , uppercase, special chararcter is required</errorMessage>
</ValidationRule>
