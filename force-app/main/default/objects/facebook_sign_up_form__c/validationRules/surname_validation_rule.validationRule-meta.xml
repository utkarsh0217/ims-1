<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>surname_validation_rule</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(OR((REGEX( surname__c ,&quot;[a-zA-Z]+&quot;)), ISBLANK( surname__c ) ))</errorConditionFormula>
    <errorDisplayField>surname__c</errorDisplayField>
    <errorMessage>number and blank field is not allowed</errorMessage>
</ValidationRule>
