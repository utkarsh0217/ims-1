<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>third_insta_blank_rule</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISBLANK( X3rd_installment_due_amount__c ),NOT( ISBLANK( X3rd_installment_paid_amount__c ) ))</errorConditionFormula>
    <errorDisplayField>X3rd_installment_paid_amount__c</errorDisplayField>
    <errorMessage>3rd installment not eligible</errorMessage>
</ValidationRule>
