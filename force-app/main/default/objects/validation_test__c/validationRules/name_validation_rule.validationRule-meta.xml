<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>name_validation_rule</fullName>
    <active>true</active>
    <errorConditionFormula>OR(ISNUMBER(employee_name__c), ISBLANK(employee_name__c))</errorConditionFormula>
    <errorDisplayField>employee_name__c</errorDisplayField>
    <errorMessage>it should not contain numbers.</errorMessage>
</ValidationRule>
